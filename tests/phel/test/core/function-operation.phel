(ns phel\test\core\function-operation
  (:require phel\test :refer [deftest is-equals is-false]))

# ------------------
# Function operation
# ------------------

(deftest test-identity
  (is-equals "a" (identity "a") "identity returns itself"))

(deftest test-comp
  (is-equals 1 ((comp) 1) "compose zero arguments")
  (is-equals 2 ((comp inc) 1) "compose one arguments")
  (is-equals 3 ((comp inc inc) 1) "compose two arguments"))

(deftest test-complement
  (is-false ((complement and) true true) "complement of and"))

(deftest test-juxt
  (is-equals @[2 1] ((juxt second first) @[1 2]) "juxt"))

(deftest test-partial
  (is-equals 3 ((partial + 2) 1) "partial of add"))
